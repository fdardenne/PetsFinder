<!DOCTYPE html>
<html>
    <head>
        <% include ../layout/meta %>
    </head>

    <body>
        <% include ../layout/header %>

        <form method="GET" action="/search">
          <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Search by city" value="<%= city %>" name="city" aria-label="Search by city">
              <div class="input-group-append">
                <button class="btn btn-outline-primary" type="submit">Search</button>
              </div>
            </div>
        </form>

        <% posts.forEach((post) => { %>
            
            <h3><%= post.petname %></h3>
            <img src="<%= post.thumbnail %>" alt="" width="100" height="100"> <br>
            Author: <%= post.username %> <br>
            Phone: <%= post.phone %> <br>
            Mail: <%= post.mail %> <br>
            Date : <%= post.date %> <br>
            Location :<%= post.location %><br>
            Description : <%= post.description %><br>
            Found or lost: 
            <% if(post.found){ %>
              Lost 
            <% }else{ %>
              found
            <% } %>
            <br>
            Cat/Dogs: <%= post.tags %>
            <hr>
        <% }); %>
    </body>
</html>
