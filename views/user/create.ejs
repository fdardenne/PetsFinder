<!DOCTYPE html>
<html>
    <head>
        <% include ../layout/meta %>
    </head>

    <body>
        <% include ../layout/header %>

        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-lg-6 col-md-8">
                    <h1>Register</h1>

                    <hr>

                    <form method="POST" action="/auth/register">
                        <fieldset>
                            <div class="form-group row">
                                <label for="name" class="col-sm-3 col-form-label">Name</label>
                                <div class="col-sm-9 my-auto">
                                    <input type="text" class="form-control" id="name" name="name" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="phone_number" class="col-sm-3 col-form-label">Phone number</label>
                                <div class="col-sm-9 my-auto">
                                    <input type="tel" class="form-control" id="phone_number" name="phone" required>
                                </div>
                            </div>
                        </fieldset>

                        <hr>

                        <fieldset>
                            <div class="form-group row">
                                <label for="email" class="col-sm-3 col-form-label">Email</label>
                                <div class="col-sm-9 my-auto">
                                    <input type="email" class="form-control" id="email" name="email" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-sm-3 col-form-label">Password</label>
                                <div class="col-sm-9 my-auto">
                                    <input type="password" class="form-control" id="password" name="password" required>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-9 offset-md-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="conditions">
                                        <label class="form-check-label" for="conditions">I accept the terms and conditions</label>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <hr>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-success">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
  </body>
</html>
