<!DOCTYPE html>
<html>
    <head>
        <% include ../layout/meta %>
    </head>

    <body>
        <% include ../layout/header %>

        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-lg-6 col-md-8">
                    <h1>Edit password</h1>
                    <% if (alert.success) {%>
                        <div class="alert alert-success">
                            <%= alert.success %>
                        </div>
                        <%}%>
                        <% if (alert.error) {%>
                            <div class="alert alert-error">
                                <%= alert.error %>
                            </div>
                        <%}%>
                    <hr>

                    <form method="POST" action="#">
                        <div class="form-group row">
                            <label for="current_password" class="col-sm-3 col-form-label">Password (current)</label>
                            <div class="col-sm-9 my-auto">
                                <input type="password" class="form-control" id="current_password" name="current" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="new_password" class="col-sm-3 col-form-label">Password (new)</label>
                            <div class="col-sm-9 my-auto">
                                <input type="password" class="form-control" id="new_password"  name="new" required>
                            </div>
                        </div>

                        <hr>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-success">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
  </body>
</html>
